{
    "name": "rougin/credo",
    "description": "Doctrine ORM integration for the Codeigniter framework.",
    "keywords": ["codeigniter", "credo", "doctrine", "integration", "orm"],
    "homepage": "https://github.com/rougin/credo",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "https://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "doctrine/orm": "~2.5",
        "rougin/codeigniter": "~3.0",
        "rougin/spark-plug": "~0.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2|~5.7",
        "scrutinizer/ocular": "~1.1.0"
    },
    "autoload": {
        "psr-4": {
            "Rougin\\Credo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rougin\\Credo\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "suggest": {
        "rougin/codeigniter": "Core functionality of the Codeigniter framework.",
        "rougin/combustor": "MVC code generator for the Codeigniter framework.",
        "rougin/refinery": "\"Ready-to-eat\" migrations for the Codeigniter framework."
    }
}